using System.Collections.Generic;
using System.IO;
using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.StaticFiles;
using Microsoft.Azure.WebJobs;
using Microsoft.Azure.WebJobs.Extensions.Http;
using Microsoft.AspNetCore.Http;
using Microsoft.Extensions.Logging;

namespace {{Namespace}}
{
    public static class OpenApiProvider
    {
        [FunctionName("OpenApiProvider")]
        public static IActionResult Run([HttpTrigger(AuthorizationLevel.Anonymous, "get", "post", Route = "openapi/{name?}")]HttpRequest req, ILogger logger, string name)
        {
            if (string.IsNullOrWhiteSpace(name))
            {
                name = "index.html";
            }

            using (Stream stream = typeof(OpenApiProvider).Assembly.GetManifestResourceStream($"{{Namespace}}.OpenApi.{name}"))
            {
                if (stream != null)
                {
                    ContentResult result = new ContentResult();
                    using (StreamReader reader = new StreamReader(stream))
                    {
                        result.Content = reader.ReadToEnd();
                    }

                    var provider = new FileExtensionContentTypeProvider();
                    if (!provider.TryGetContentType(Path.GetExtension(name).ToLower(), out var contentType))
                    {
                        contentType = "application/octet-stream";
                    }

                    result.ContentType = contentType;

                    return result;
                }
                else {
                    logger.LogWarning($"Unable to find resource for {name}");
                }
            }
            return new NotFoundResult();
        }
    }
}
